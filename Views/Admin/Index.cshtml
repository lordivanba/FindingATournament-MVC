@model IEnumerable<FindingATournament_MVC.Models.administrador>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Administradores</h2>

<button type="button" class="btn btn-default btn-lg" style="margin: 10px">@Html.ActionLink("Agregar", "Create")</button>

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clave)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clave)
            </td>
            <td>
                <button type="button" class="btn btn-info">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                </button>

                <button type="button" class="btn btn-primary">
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id })
                </button>

                <button type="button" class="btn btn-danger">
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </button>

            </td>
        </tr>
    }

</table>
